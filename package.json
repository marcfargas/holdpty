{
  "name": "holdpty",
  "version": "0.2.1",
  "description": "Minimal cross-platform detached PTY. Launch commands in a pseudo-terminal, attach/view/record later.",
  "type": "module",
  "license": "MIT",
  "author": "Marc Fargas <marc@fargas.com>",
  "homepage": "https://github.com/marcfargas/holdpty#readme",
  "bugs": {
    "url": "https://github.com/marcfargas/holdpty/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcfargas/holdpty.git"
  },
  "keywords": [
    "pi-package",
    "pty",
    "terminal",
    "detach",
    "attach",
    "screen",
    "tmux",
    "dtach",
    "node-pty",
    "cross-platform",
    "windows",
    "conpty"
  ],
  "pi": {
    "skills": [
      "./skills"
    ]
  },
  "bin": {
    "holdpty": "./dist/cli.js"
  },
  "files": [
    "dist/cli.js",
    "dist/cli.js.map",
    "dist/cli.d.ts",
    "dist/client.js",
    "dist/client.js.map",
    "dist/client.d.ts",
    "dist/holder.js",
    "dist/holder.js.map",
    "dist/holder.d.ts",
    "dist/platform.js",
    "dist/platform.js.map",
    "dist/platform.d.ts",
    "dist/protocol.js",
    "dist/protocol.js.map",
    "dist/protocol.d.ts",
    "dist/ring-buffer.js",
    "dist/ring-buffer.js.map",
    "dist/ring-buffer.d.ts",
    "dist/line-filter.js",
    "dist/line-filter.js.map",
    "dist/line-filter.d.ts",
    "dist/session.js",
    "dist/session.js.map",
    "dist/session.d.ts",
    "skills/",
    ".well-known/",
    "LICENSE",
    "LICENSE-CC0",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run src/platform.test.ts src/ring-buffer.test.ts src/protocol.test.ts",
    "test:integration": "vitest run src/integration.test.ts",
    "test:e2e": "vitest run src/e2e.test.ts",
    "lint": "tsc --noEmit",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepublishOnly": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public"
  }
}
